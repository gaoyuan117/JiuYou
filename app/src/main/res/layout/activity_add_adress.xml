<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jiuyou.ui.activity.AddAdressActivity">

    <include layout="@layout/layout_title" />

    <EditText
        android:id="@+id/et_add_adress_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="请输入收货人姓名"
        android:paddingBottom="14dp"
        android:paddingLeft="20dp"
        android:paddingRight="@dimen/margin_20dp"
        android:paddingTop="14dp"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#a8a9aa" />

    <EditText
        android:id="@+id/et_add_adress_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="请输入收货人手机号"
        android:inputType="phone"
        android:paddingBottom="14dp"
        android:paddingLeft="20dp"
        android:paddingRight="@dimen/margin_20dp"
        android:paddingTop="14dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#a8a9aa" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_add_adress_sheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:focusable="false"
            android:paddingBottom="14dp"
            android:paddingLeft="20dp"
            android:paddingRight="@dimen/margin_20dp"
            android:paddingTop="14dp"
            android:text="点击选择省份"
            android:textColor="@color/text_gray" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_20dp"
            android:src="@mipmap/grzx_dizhiguanli_gengduo" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#a8a9aa" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:textColor="@color/text_gray"
            android:id="@+id/et_add_adress_shi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:focusable="false"
            android:paddingBottom="14dp"
            android:paddingLeft="20dp"
            android:paddingRight="@dimen/margin_20dp"
            android:paddingTop="14dp"
            android:text="点击选择城市" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_20dp"
            android:src="@mipmap/grzx_dizhiguanli_gengduo" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#a8a9aa" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:textColor="@color/text_gray"
            android:id="@+id/et_add_adress_qu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:focusable="false"
            android:paddingBottom="14dp"
            android:paddingLeft="20dp"
            android:paddingRight="@dimen/margin_20dp"
            android:paddingTop="14dp"
            android:text="点击选择地区" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_20dp"
            android:src="@mipmap/grzx_dizhiguanli_gengduo" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#a8a9aa" />

    <EditText
        android:id="@+id/et_add_adress_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="请填写详细收货地址"
        android:paddingBottom="14dp"
        android:paddingLeft="20dp"
        android:paddingRight="@dimen/margin_20dp"
        android:paddingTop="14dp" />

    <View
        android:layout_marginTop="@dimen/margin_30dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#a8a9aa" />

</LinearLayout>
