<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#eeeeee"
        />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="18dp"
    android:layout_height="41dp">

    <TextView
        android:id="@+id/time1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="2017-3-5 21:23"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        />



    <TextView
        android:id="@+id/quhuoma"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="272504"
        android:textColor="#fe0100"
        android:layout_alignParentRight="true"
        android:textSize="14sp"
        android:gravity="center_vertical"
        />
    <TextView
        android:id="@+id/text111"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/margin_10dp"
        android:text="取货码:"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@+id/quhuoma"
        />

</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d6d6d6"
        />
    <com.jiuyou.customctrls.MyListView
        android:id="@+id/list_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/translate"
        android:listSelector="@color/translate"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginRight="22dp"
        android:layout_marginLeft="15dp"
        android:layout_height="59dp">

        <ImageView
            android:id="@+id/erweima"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />



        <TextView
            android:id="@+id/heji"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="合计¥6"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/jianshu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin_10dp"
            android:text="共2件商品"
            android:textSize="@dimen/margin_15dp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@+id/heji"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d6d6d6"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginRight="22dp"
        android:layout_marginLeft="15dp"
        android:layout_height="59dp">

        <TextView
            android:id="@+id/fujinhuogui"
            android:layout_width="100dp"
            android:layout_height="27dp"
            android:background="@drawable/shape_corner2"
            android:layout_alignParentRight="true"
            android:layout_marginTop="26dp"
            android:text="查看附近货柜"
            android:singleLine="true"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            />
    </RelativeLayout>

</LinearLayout>