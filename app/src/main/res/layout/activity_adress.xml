<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.jiuyou.ui.activity.AdressActivity">

    <include layout="@layout/layout_title" />

    <ListView
        android:visibility="gone"
        android:id="@+id/lv_address"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:divider="@color/line_color"
        android:dividerHeight="@dimen/padding_10dp" />

    <LinearLayout
        android:id="@+id/ll_adress"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_wushouhuodizhi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="还没有收货地址呢！"
            android:textColor="@color/gray"
            android:textSize="18sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_adress_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_red"
        android:gravity="center"
        android:padding="14dp"
        android:text="新增收获地址"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>