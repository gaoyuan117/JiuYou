<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <LinearLayout
        android:id="@+id/ll_goods1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@drawable/shape_corner"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tv_goods1"
            android:layout_width="178dp"
            android:layout_height="122dp"
            android:background="@mipmap/image_no_advertise" />

        <TextView

            android:id="@+id/tv_goodsname1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12.5dp"
            android:text="天然矿物质水"
            android:textColor="#393939"
            android:textSize="12sp" />

        <TextView

            android:id="@+id/tv_goodsprice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:text="¥3.00"
            android:textColor="#F5586C"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/iv_jiahao1"
            android:layout_width="@dimen/margin_15dp"
            android:layout_height="@dimen/margin_15dp"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="6dp"
            android:background="@mipmap/icon_jiahao" />


    </LinearLayout>

</LinearLayout>