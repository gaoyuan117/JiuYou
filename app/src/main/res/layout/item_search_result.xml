<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"

    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_resultitem"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/item_click_selector00"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_flag"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/circle_bg"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_video_Pic"
            android:layout_width="88dp"
            android:layout_height="49.5dp"
            android:layout_gravity="center_vertical"
            android:src="#42bd56" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="14dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_video_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/result_textcolor1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_video_name"
                android:layout_marginTop="11dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_one_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/result_textcolor2"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/result_textcolor2"
                    android:textSize="12dp"
                    android:text="/" />

                <TextView
                    android:id="@+id/tv_second_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/result_textcolor2"
                    android:textSize="12dp" />
            </LinearLayout>

            <ImageView
                android:layout_width="31dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:src="@drawable/more" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>