<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginLeft="12dp"
       >
       <ImageView
           android:layout_width="17dp"
           android:layout_height="17dp"
           android:background="@drawable/problem"
           android:layout_marginTop="15dp"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerInParent="true"
           android:text="问题描述"
           android:textColor="#767676"
           android:textSize="13dp"
           android:layout_marginTop="15dp"
           android:layout_marginLeft="12dp"/>
   </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/linelayout">

        <EditText
            android:id="@+id/et_feedback_problem"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@color/white"
            android:gravity="top|left"
            android:hint="@string/write_comment"
            android:paddingLeft="11.5dp"
            android:textColorHint="@color/text_hint_color"
            android:textColor="@color/search_itemcolor"
            android:textSize="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="15dp"
            android:lineSpacingExtra="3dp"
            android:maxLength="300"/>

        <TextView
            android:id="@+id/tv_feedback_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5.5dp"
            android:layout_marginRight="14.5dp"
            android:text="0/300"
            android:textColor="#999"
            android:textSize="13dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="15dp"
            android:background="@drawable/icon_pic"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="15dp"
            android:text="反馈附图"
            android:textColor="#767676"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:id="@+id/imageView1"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:src="@drawable/rectangle"
                />
            <ImageView
                android:id="@+id/imageView1_out"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/icon_x"
                android:layout_marginLeft="66dp"
                android:layout_marginTop="9dp"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:id="@+id/imageView2"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:src="@drawable/rectangle"
                />
            <ImageView
                android:id="@+id/imageView2_out"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/icon_x"
                android:layout_marginLeft="66dp"
                android:layout_marginTop="9dp"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:id="@+id/imageView3"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:src="@drawable/rectangle"
                />
            <ImageView
                android:id="@+id/imageView3_out"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/icon_x"
                android:layout_marginLeft="66dp"
                android:layout_marginTop="9dp"
                />
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/submit_bt"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="98dp"
        android:text="提交"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:background="@drawable/button_feedback"
        />
</LinearLayout>