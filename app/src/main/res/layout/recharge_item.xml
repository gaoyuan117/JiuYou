<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_main"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/devide_line"
        >
<TextView
    android:id="@+id/tv_time"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:text="2016年3月"
    android:textSize="15sp"
    android:layout_marginLeft="@dimen/margin_15dp"
    />
    </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <com.jiuyou.customctrls.CircleImageView
        android:id="@+id/item_head"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon_nopic"
        android:layout_marginLeft="15dp"
        />

    <LinearLayout
        android:layout_toRightOf="@+id/item_head"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/margin_15dp"
        >

        <TextView
            android:id="@+id/tv_chongzhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="充值20元"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_cztime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-3-12 12:20"
            android:layout_marginTop="10dp"
            android:textSize="9sp"
            android:textColor="#a8a8a8"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/chongzhi_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="充值成功"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_15dp"
        android:textColor="#828282"
        />
    
</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/devide_line"
        />

</LinearLayout>