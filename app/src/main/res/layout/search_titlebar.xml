<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="?attr/appBg">


    <ImageView
        android:id="@+id/iv_keyback"
        android:layout_width="291dp"
        android:layout_height="27dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:src="@drawable/search_background" />

    <EditText
        android:id="@+id/et_keywords"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:layout_marginLeft="40dp"
        android:imeOptions="actionSearch"
        android:singleLine="true"
        android:hint="@string/hint_input"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:textColorHint="@color/primary_hintcolor"
        />
    <requestFocus />
    <TextView
        android:id="@+id/tv_closeword"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/iv_keyback"
        android:background="@drawable/colseword"/>

    <ImageView
        android:id="@+id/iv_cancle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:src="@drawable/btn_cancle_selector" />
</RelativeLayout>