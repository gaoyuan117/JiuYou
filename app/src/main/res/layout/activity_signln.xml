<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <ImageView
        android:id="@+id/iv_login"
        android:layout_width="169.5dp"
        android:layout_height="164.5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="116dp"
        android:background="@drawable/login"
        />
    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="@string/login"

        android:textColor="@color/login_color"
        android:textSize="15sp" />
    <LinearLayout
        android:id="@+id/ll_siglnl"
        android:layout_width="264dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/login_click_selector"
        android:layout_marginBottom="87.5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/submit"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:gravity="center"
            />

    </LinearLayout>
</RelativeLayout>

