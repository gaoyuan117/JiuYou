<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_bar_common_rv_viewGroup"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#E04A46"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/title_bar_operate_1"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_item_press_touming"
            android:clickable="true"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_fanhui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="支付成功"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="15dp"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_goumai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="您已成功购买农夫山泉X1"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:textColor="@color/black"
        android:layout_below="@+id/title_bar_common_rv_viewGroup"
        android:textSize="16.5dp"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        />
    
    <LinearLayout
        android:id="@+id/ll_nimabi"
        android:layout_below="@+id/tv_goumai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_20dp"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/tv_q"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获得取货号"
            android:textColor="@color/black"
            android:textSize="16.5dp"
            android:gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/tv_quhuohao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="351225"
            android:textColor="#f35869"
            android:layout_marginLeft="14dp"
            android:textSize="16.5dp"
            android:gravity="center_horizontal"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/erweima"
        android:layout_width="168dp"
        android:layout_height="168dp"
        android:background="@mipmap/icon_nopic"
        android:layout_above="@+id/btn_exit"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="根据取货号，二维码到附近货柜取货"
        android:textColor="@color/black"
        android:textSize="16.5dp"
        android:layout_above="@+id/btn_exit"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:gravity="center_horizontal"
        />

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="84.5dp"
        android:layout_marginRight="84.5dp"
        android:layout_marginBottom="45dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_corner10"
        android:enabled="true"
        android:gravity="center"
        android:onClick="exitSys"
        android:text="查看附近货柜"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>