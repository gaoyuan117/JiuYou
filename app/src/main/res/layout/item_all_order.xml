<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_all_dd"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:paddingBottom="@dimen/margin_10dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_all_dd_title"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/img_all_dd"
            android:ellipsize="end"
            android:lines="2"
            android:text=""
            android:textColor="@color/text_black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_all_dd_price"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_all_dd"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/img_all_dd"
            android:textColor="@color/text_red"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_all_dd_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_all_dd_title"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_10dp"
            android:ellipsize="end"
            android:text=""
            android:textColor="@color/text_black"
            android:textSize="15sp" />

    </RelativeLayout>

</LinearLayout>
