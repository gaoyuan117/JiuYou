<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_bar_common_rv_viewGroup"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#E04A46"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/title_bar_operate_1"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_item_press_touming"
            android:clickable="true"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_fanhui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="充值"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="17dp"
            />


        <TextView
            android:id="@+id/chongzhijilu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="充值记录"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_15dp"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="15dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="86dp">

        <com.jiuyou.customctrls.CircleImageView
            android:id="@+id/head_image"
            android:layout_width="71dp"
            android:layout_height="71dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:src="@mipmap/logo"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/head_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="昵称:QQ用户333333333"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_yue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="余额:¥0"
                android:textColor="@color/black"
                android:textSize="14dp" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl1"
        android:background="@color/devide_line"
        />
    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择充值金额"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginBottom="@dimen/margin_15dp"
        android:textColor="@color/black"
        android:textSize="14dp" />
    
    <com.jiuyou.customctrls.MyGridView
        android:id="@+id/my_gridView"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="24dp"
        android:verticalSpacing="13dp"
        android:divider="@color/translate"
        android:listSelector="@color/translate"
        android:cacheColorHint="#00000000"
        android:numColumns="3"/>

    <TextView
        android:id="@+id/tv21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择支付方式"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginBottom="@dimen/margin_15dp"
        android:textColor="@color/black"
        android:textSize="14dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl1"
        android:background="@color/devide_line"
        />

    <RelativeLayout
        android:id="@+id/rl_zhifubao"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/iv11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_zhifubao"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_15dp"
            />
        <TextView
            android:id="@+id/tv11"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="支付宝支付"
            android:layout_toRightOf="@+id/iv11"
            android:gravity="center_vertical"
            android:layout_marginLeft="13dp"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <ImageButton
            android:id="@+id/ib_zhifubao"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_fuxuankuan_xuanzhong"
            android:layout_marginRight="@dimen/margin_15dp"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl1"
        android:background="@color/devide_line"
        />

    <RelativeLayout
        android:id="@+id/rl_weixin"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/iv12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon__weixin"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_15dp"
            />
        <TextView
            android:id="@+id/tv12"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="微信支付"
            android:layout_toRightOf="@+id/iv12"
            android:gravity="center_vertical"
            android:layout_marginLeft="13dp"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <ImageButton
            android:id="@+id/ib_weixin"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_fuxuankuan"
            android:layout_marginRight="@dimen/margin_15dp"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl1"
        android:background="@color/devide_line"
        />

    <RelativeLayout
        android:id="@+id/rl_yinlian"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:visibility="gone"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/iv13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_yinlianzhifu"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_15dp"
            />
        <TextView
            android:id="@+id/tv13"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="银联支付"
            android:layout_toRightOf="@+id/iv13"
            android:gravity="center_vertical"
            android:layout_marginLeft="13dp"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <ImageButton
            android:id="@+id/ib_yinlian"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_fuxuankuan"
            android:layout_marginRight="@dimen/margin_15dp"
            />
    </RelativeLayout>


    <Button
        android:id="@+id/btn_chongzhi"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/shape_corner2"
        android:gravity="center"
        android:onClick="login"
        android:text="马上充值"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_centerHorizontal="true" />


</LinearLayout>