<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/img_my_evaluate"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            android:src="@color/text_ora" />

        <TextView
            android:id="@+id/tv_my_evaluate_title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/img_my_evaluate"
            android:ellipsize="end"
            android:lines="1"
            android:text="贵州茅台酒"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_my_evaluate_content"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_my_evaluate"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/img_my_evaluate"
            android:text="很不错！"
            android:textColor="@color/text_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_my_evaluate_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:text="2017.9.8"
            android:textColor="@color/text_black"
            android:textSize="15sp" />

    </RelativeLayout>

</LinearLayout>
